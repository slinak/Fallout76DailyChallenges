@model FODailyChallenges.Models.ChallengeResolution

@{
    ViewData["Title"] = "Create Resolution for Challenge";
}

<h2>Create Resolution for Challenge</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group row">
            @Html.LabelFor(model => model.ChallengeID, htmlAttributes: new { @class = "control-label col-sm" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ChallengeID, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.ResolutionLocation, @Html.DisplayNameFor(model => model.ResolutionLocation), htmlAttributes: new { @class = "control-label col-sm" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ResolutionLocation, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ResolutionLocation, "", new { @class = "text-danger" })
                
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.ResolutionQuantity, "Resolution Quantity", htmlAttributes: new { @class = "control-label col-sm" })
            <div class="col-md-10">
                <dl>
                @foreach (var value in Enum.GetValues(typeof(ResolutionQuantity)))
                    if (value != null)
                    {
                        <dd>
                            @Html.RadioButtonFor(model => model.ResolutionQuantity, value, htmlAttributes : new { @class = "form-check-input", @id = value })
                            @Html.Label(value.ToString(), value.ToString(), htmlAttributes: new { @for = value })
                        </dd>
                    }
                </dl>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" value="Create" class="btn btn-primary mb-2" />
            </div>
        </div>
    </div>
}